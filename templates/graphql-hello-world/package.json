{
  "name": "<%= projectName %>",
  "version": "1.0.0",
  "description": "Hello world in GraphQL for first steps",
  "main": "build/server.js",
  "scripts": {
    "start": "node build/server.js",
    "build": "tsc -p . && ncp src/schema build/schema",
    "start:dev": "npm run build:dev",
    "build:dev": "nodemon \"src/server.ts\" --exec \"ts-node\" src/server.ts -e ts,graphql,json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/<%= githubUser %>/<%= projectName %>.git"
  },
  "keywords": [],
  "author": "<%= authorNameLastname %> <<%= emailValue %>>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/<%= githubUser %>/<%= projectName %>/issues"
  },
  "homepage": "https://github.com/<%= githubUser %>/<%= projectName %>#readme",
  "dependencies": {
    "@graphql-tools/load-files": "^6.0.15",
    "@graphql-tools/merge": "^6.0.15",
    "apollo-server-express": "^2.16.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "^15.3.0",
    "graphql-import": "^1.0.2",
    "graphql-import-node": "0.0.4",
    "graphql-merge-resolvers": "^1.1.16",
    "graphql-playground-middleware-express": "^1.7.18",
    "graphql-tools": "^6.0.15",
    "ncp": "^2.0.0",
    "typescript": "^3.9.7"
  },
  "devDependencies": {
    "@types/compression": "1.7.0",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.7",
    "@types/node": "^14.0.26",
    "nodemon": "^2.0.4",
    "ts-node": "^8.10.2",
    "typescript-tslint-plugin": "0.5.5"
  }
}
